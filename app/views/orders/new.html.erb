    <%= simple_form_for(Order.new, :url => { :action=>"create", :controller=>"orders" }) do |f| %>
      <h2>Блюда на Сегодня(<%= Date::DAYNAMES[Date.today.wday] %>)</h2>
      <% if Soup.where(created_at: (Time.now.midnight..Time.now.midnight + 1.day)).present? %>
        <h3>Первые блюда</h3>
        <div class="row">
          <% Soup.where(created_at: (Time.now.midnight..Time.now.midnight + 1.day)).each do |soup| %>
            <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                <img src="<%= soup.photo %>" alt="<%= soup.name %>">
                <div class="caption">
                  <h4><%= soup.name %></h4>
                  <p>Цена: <%= soup.price %></p>
                  <% if user_signed_in? %>
                    <input id="order_soup_id" name="order[soup_id]" type="radio" value="<%= soup.id %>" checked>
                  <% end %>
                  <% if current_user == User.first %>
                    <%= link_to 'Редактировать', edit_soup_path(soup), :title => 'Редактировать' %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

