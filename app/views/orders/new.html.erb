                  <% if user_signed_in? %>
                    <input id="order_cereal_id" name="order[cereal_id]" type="radio" value="<%= cereal.id %>" checked>
                  <% end %>
                  <% if current_user == User.first %>
                    <%= link_to 'Редактировать', edit_cereal_path(cereal), :title => 'Редактировать' %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if Drink.where(created_at: (Time.now.midnight - 1.day)..Time.now.midnight).present? %>
