<h1>Напитки</h1>
<% if current_user == User.first %>
  <div class="row">
    <div class="col-md-12 buffer-top">
        <div class="row buffer-top">
          <table class="table table-striped">
            <tr>
              <td><b>ID</b></td>
              <td><b>Имя</b></td>
              <td><b>Управление</b></td>
              <td><b>Фото</b></td>
            </tr>
            <% @drinks.each do |drink| %>
            <tr>
              <td><%= drink.id %></td>
              <td><%= drink.name %></td>
              <td><%= link_to fa_icon('pencil'), edit_drink_path(drink), :title => 'Редактировать' %></td>
              <td><img src="<%= drink.photo %>" alt="<%= drink.name %>"></td>
            </tr>
            <% end %>
          </table>
          <%= link_to 'Добавить напиток', new_drink_path, class: 'btn btn-primary' %>
        </div>
    </div>
  </div>
<% else %>
  <p>Здесь может шариться только Admin</p>
<% end %>
