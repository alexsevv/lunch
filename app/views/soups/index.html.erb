<h1>Первые блюда</h1>
<% if current_user.admin? %>
  <div class="row">
    <div class="col-md-12 buffer-top">
        <div class="row buffer-top">
          <table class="table table-striped">
            <tr>
              <td><b>ID</b></td>
              <td><b>Имя</b></td>
              <td><b>Дата создания</b></td>
              <td><b>Управление</b></td>
              <td><b>Фото</b></td>
            </tr>
            <% @soups.each do |soup| %>
            <tr>
              <td><%= soup.id %></td>
              <td><%= soup.name %></td>
              <td><%= soup.created_at %></td>
              <td><%= link_to fa_icon('pencil'), edit_soup_path(soup), :title => 'Редактировать' %></td>
              <td><img src="<%= soup.photo.thumb.url %>" alt="<%= soup.name %>"></td>
            </tr>
            <% end %>
          </table>
          <%= link_to 'Добавить Первое блюдо', new_soup_path, class: 'btn btn-primary' %>
        </div>
    </div>
  </div>
<% else %>
  <p>Здесь может шариться только Admin</p>
<% end %>
